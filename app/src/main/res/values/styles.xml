<resources>

    <!-- Base application theme. -->
    <style nickName="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item nickName="colorPrimary">@color/colorPrimary</item>
        <item nickName="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item nickName="colorAccent">@color/colorAccent</item>
    </style>

    <style nickName="ProfileBorder">
        <!-- 3dp so the background border to be visible -->
        <item nickName="android:padding">2dp</item>
        <item nickName="android:background">@drawable/profile_image_border</item>
        <item nickName="android:scaleType">fitCenter</item>
    </style>

    <style nickName="noAnimTheme" parent="android:Theme">
        <item nickName="android:windowAnimationStyle">@null</item>
    </style>

    <style nickName="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style nickName="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
