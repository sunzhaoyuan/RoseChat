<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/invitation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/invitation_message"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/invitation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/invitation_confirm"
                android:layout_below="@+id/invitation_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="12sp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/invitation_decline"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/invitation_message"
                android:layout_toRightOf="@+id/invitation_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textSize="12sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/invitation_pending"
                android:layout_below="@+id/invitation_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response pending"
                android:textSize="12sp"
                android:visibility="gone"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>