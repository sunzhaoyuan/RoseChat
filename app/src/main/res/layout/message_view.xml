<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/message_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_small"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/ic_navi_profile" />

            <TextView
                android:id="@+id/message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="@dimen/padding_small"
                android:layout_toRightOf="@id/message_profile_pic"
                android:text="Temp_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/message_last_interaction"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/padding_small"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_name"
                android:paddingTop="3dp"
                android:layout_toRightOf="@id/message_profile_pic"
                android:text="last_message_interaction"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
