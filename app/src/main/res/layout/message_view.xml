<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/message_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_navi_profile"/>
            <TextView
                android:id="@+id/message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp_name"
                android:layout_toRightOf="@id/message_profile_pic"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/message_last_interaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="last_message_interaction"
                android:textSize="10sp"
                android:layout_toRightOf="@id/message_profile_pic"
                android:layout_below="@+id/message_name"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>