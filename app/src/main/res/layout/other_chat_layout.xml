<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amber_50"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_min"
    android:paddingEnd="@dimen/padding_small"
    android:paddingStart="@dimen/padding_small"
    android:paddingTop="@dimen/padding_min">

    <TextView
        android:id="@+id/chat_profile_pic_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_profile_pic_chat_bg"
        android:gravity="center"
        android:text="@string/chat_other_profile_blank"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey_200"
        android:textStyle="bold" />

    <android.support.v4.widget.Space
        android:layout_width="@dimen/margin_small"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/chat_text_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_max"
        android:background="@drawable/chat_rounded_rect_bg"
        android:padding="@dimen/padding_min"
        android:text="@string/chat_other_blank"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/purple_700" />

</LinearLayout>